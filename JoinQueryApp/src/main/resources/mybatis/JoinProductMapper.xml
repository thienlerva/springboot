    <!--<cache />-->
    <resultMap id="custNameResultMap"
               type="com.jpmc.JoinQueryApp.model.JoinProduct" >
        <result column="product_id" property="productId" jdbcType="INTEGER" />
        <result column="product_name" property="productName" jdbcType="VARCHAR" />
        <result column="product_price" property="price" jdbcType="INTEGER" />
        <result column="customer_id" property="customerId" jdbcType="INTEGER" />
        <result column="customer_name" property="customerName" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="productColumns">
        pr.PRODUCT_ID,
        pr.PRODUCT_NAME,
        pr.PRODUCT_PRICE,
        pr.CUSTOMER_ID,
        c.CUSTOMER_NAME
    </sql>

    <select id="getCustomerName" resultMap="custNameResultMap">
        SELECT
        <include refid="productColumns"/>
        FROM product pr
        join customer c
        on pr.customer_id = c.customer_id;
    </select>

